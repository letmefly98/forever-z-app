{
  "manifest_version": 3,
  "name": "forever-z",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  "icons": {
    "48": "images/icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "css": ["content/index.css"]
    }
  ]
}
