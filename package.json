{
  "name": "forever-z-app",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "src/common",
    "src/databases",
    "src/desktop",
    "src/website",
    "src/docs",
    "src/scripts",
    "src/types"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "dev": "npm run --workspace=website dev",
    "dev:web": "npm run --workspace=website dev:web",
    "dev:docs": "npm run --workspace=docs dev",
    "build": "npm run --workspace=website build",
    "build:web": "npm run --workspace=website build:web",
    "build:docs": "npm run --workspace=docs build",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
